{
  "theme": {
    "name": "Ableton Dark",
    "version": "1.0.0",
    "description": "Dark theme inspired by Ableton Live's aesthetic"
  },
  "colors": {
    "base": {
      "background": "#1e1e1e",
      "background_alt": "#252525",
      "surface": "#2d2d2d",
      "surface_light": "#383838",
      "surface_hover": "#404040"
    },
    "accent": {
      "accent": "#ff764d",
      "accent_hover": "#ff8a66",
      "accent_pressed": "#e66a45"
    },
    "text": {
      "text_primary": "#e0e0e0",
      "text_secondary": "#999999",
      "text_disabled": "#666666",
      "text_on_accent": "#ffffff"
    },
    "border": {
      "border": "#3d3d3d",
      "border_light": "#4a4a4a",
      "border_focus": "#ff764d"
    },
    "status": {
      "success": "#7cb342",
      "warning": "#ffa726",
      "error": "#ef5350",
      "info": "#42a5f5"
    },
    "location": {
      "local": "#7cb342",
      "network": "#42a5f5",
      "cloud": "#ab47bc",
      "offline": "#666666"
    },
    "selection": {
      "selection": "#ff764d40",
      "selection_inactive": "#404040"
    },
    "scrollbar": {
      "scrollbar": "#4a4a4a",
      "scrollbar_hover": "#5a5a5a"
    },
    "export": {
      "export_indicator": "#4CAF50"
    }
  },
  "fonts": {
    "family": "Segoe UI, SF Pro Display, -apple-system, sans-serif",
    "sizes": {
      "tiny": 9,
      "small": 10,
      "compact": 11,
      "normal": 12,
      "large": 14,
      "title": 18,
      "header": 24
    },
    "weights": {
      "normal": "normal",
      "bold": "bold"
    }
  },
  "spacing": {
    "tight": 2,
    "compact": 4,
    "normal": 6,
    "comfortable": 8,
    "spacious": 12,
    "large": 16,
    "xlarge": 20
  },
  "sizing": {
    "border_radius": {
      "small": 3,
      "normal": 4,
      "medium": 6,
      "large": 8
    },
    "border_width": {
      "thin": 1,
      "normal": 2,
      "thick": 3
    },
    "padding": {
      "none": 0,
      "tight": "2px 4px",
      "compact": "2px 6px",
      "normal": "2px 8px",
      "comfortable": "8px 12px",
      "spacious": "8px 16px",
      "card": "12px 12px 12px 12px"
    },
    "heights": {
      "compact": 22,
      "normal": 26,
      "comfortable": 32,
      "card": 140,
      "card_width": 180,
      "preview": 60,
      "preview_width": 156
    },
    "widths": {
      "min_search": 150,
      "search_input": 300,
      "filter_combo": 65,
      "gear_button": 22,
      "tempo_button": 55,
      "tempo_spinbox": 60,
      "sort_combo": 100,
      "go_button": 26
    }
  },
  "components": {
    "search_bar": {
      "height": 26,
      "spacing": 6,
      "border_radius": 3,
      "font_size": {
        "input": 12,
        "controls": 11,
        "labels": 11,
        "buttons": 10
      },
      "padding": {
        "input": "2px 8px",
        "combo": "2px 4px",
        "button": "2px 4px",
        "label": "0px"
      }
    },
    "project_card": {
      "size": {
        "width": 180,
        "height": 140
      },
      "margins": "12px 12px 12px 12px",
      "spacing": 6,
      "border_radius": 8,
      "border_width": {
        "normal": "2px",
        "highlighted": "3px"
      },
      "preview": {
        "width": 156,
        "height": 60,
        "border_radius": 4
      },
      "name": {
        "font_size": 11,
        "font_weight": "bold",
        "max_height": 40,
        "pixel_size_fallback": 15
      },
      "tempo": {
        "font_size": 11,
        "font_weight": "bold",
        "bpm_label_size": 10
      },
      "metadata": {
        "font_size": 10,
        "location_badge": {
          "padding": "2px 6px",
          "border_radius": 4
        }
      }
    },
    "sidebar": {
      "item": {
        "padding": "8px 12px",
        "border_radius": 6
      },
      "section": {
        "spacing": 4,
        "margins": "8px 0"
      }
    },
    "table": {
      "header": {
        "padding": "8px 12px",
        "font_weight": "bold"
      },
      "cell": {
        "padding": 8
      }
    },
    "button": {
      "primary": {
        "border_radius": 6,
        "padding": "8px 16px",
        "min_width": 80
      },
      "compact": {
        "border_radius": 3,
        "padding": "2px 4px"
      }
    },
    "input": {
      "border_radius": 6,
      "padding": "8px 12px",
      "border_width": 1
    },
    "combo": {
      "border_radius": 6,
      "padding": "8px 12px",
      "min_width": 100,
      "dropdown_width": 24
    }
  },
  "tempo_colors": {
    "description": "Rainbow gradient for tempo display (60-200 BPM)",
    "range": {
      "min": 60,
      "max": 200
    },
    "gradient": {
      "60": "#8000ff",
      "80": "#0000ff",
      "100": "#00ffff",
      "120": "#00ff00",
      "140": "#ffff00",
      "170": "#ff9b00",
      "200": "#ff0000"
    }
  }
}
